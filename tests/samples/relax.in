
&CONTROL
  calculation   = 'relax'
  pseudo_dir    = './pseudos/'
  restart_mode  = 'from_scratch'
  max_seconds   = 1000
  etot_conv_thr = 1.0d-12
  forc_conv_thr = 1.0d-07
  nstep         = 100
/

&SYSTEM
  ecutwfc     = 60.0
  ibrav       = 1
  A           = 10.0
  nat         = 3
  ntyp        = 3
  input_dft   = 'PBEsol'
  occupations = 'fixed'
/

&ELECTRONS
  conv_thr         = 2.0d-12
  diagonalization  = 'ppcg'
  electron_maxstep = 100
/

&IONS
  ion_dynamics = 'bfgs'
  upscale      = 100
/

&CELL
  cell_dynamics = 'bfgs'
/

